@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hello Sign</h1>
</div>
<script nonce="kGz+zhswXpewyKQNn9ySQDgy" type="text/javascript" src="https://s3.amazonaws.com/cdn.hellosign.com/public/js/hellosign-embedded.LATEST.min.js"></script>
<script>
    HelloSign.init("@Model.ClientId");
    HelloSign.open({
        url: "@Model.SignUrl",
        allowCancel: true,
        skipDomainVerification: true,
        messageListener: function (eventData) {
            if (eventData.event == HelloSign.EVENT_SIGNED) {
                console.log("document signed!");
            }
        }
    });
</script>
